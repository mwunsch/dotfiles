[user]
	name = Mark Wunsch
	email = mark@markwunsch.com
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[alias]
	pretty = log --graph --oneline --decorate
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	stat = status -sb
  board = shortlog -sn
[github]
	user = mwunsch
[core]
	excludesfile = ~/.gitignore
[push]
	default = current
